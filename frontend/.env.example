# ================================
# E-COMMERCE FRONTEND ENVIRONMENT CONFIG
# ================================

# --------------------------------
# Application Settings
# --------------------------------
VITE_APP_NAME=E-Commerce Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern E-Commerce Platform Built with React

# Environment
VITE_NODE_ENV=development

# --------------------------------
# API Configuration
# --------------------------------

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3000/api/v1

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# Enable API Request Logging
VITE_API_LOGGING=true

# --------------------------------
# Authentication Settings
# --------------------------------

# JWT Token Storage Key
VITE_AUTH_TOKEN_KEY=authToken

# Session Timeout (in milliseconds)
VITE_SESSION_TIMEOUT=86400000

# Auto Logout on Token Expiry
VITE_AUTO_LOGOUT=true

# Remember Me Duration (in days)
VITE_REMEMBER_ME_DAYS=30

# --------------------------------
# External Services
# --------------------------------

# Payment Gateway (Stripe)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Google Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Social Media Login
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# --------------------------------
# CDN & Assets
# --------------------------------

# CDN Base URL for Images
VITE_CDN_BASE_URL=https://cdn.yourdomain.com

# Default Product Image
VITE_DEFAULT_PRODUCT_IMAGE=/images/default-product.jpg

# Default Avatar Image
VITE_DEFAULT_AVATAR_IMAGE=/images/default-avatar.jpg

# Logo URL
VITE_LOGO_URL=/images/logo.png

# --------------------------------
# Feature Flags
# --------------------------------

# Enable/Disable Features
VITE_FEATURE_REVIEWS=true
VITE_FEATURE_WISHLIST=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_CHAT_SUPPORT=true
VITE_FEATURE_NEWSLETTER=true
VITE_FEATURE_SOCIAL_LOGIN=true
VITE_FEATURE_GUEST_CHECKOUT=true
VITE_FEATURE_PRODUCT_COMPARISON=false
VITE_FEATURE_DARK_MODE=false

# --------------------------------
# UI/UX Settings
# --------------------------------

# Default Theme
VITE_DEFAULT_THEME=light

# Animation Duration (in milliseconds)
VITE_ANIMATION_DURATION=300

# Debounce Delay for Search (in milliseconds)
VITE_SEARCH_DEBOUNCE=500

# Items Per Page
VITE_PRODUCTS_PER_PAGE=12
VITE_ORDERS_PER_PAGE=10
VITE_USERS_PER_PAGE=15

# --------------------------------
# Performance Settings
# --------------------------------

# Image Lazy Loading
VITE_IMAGE_LAZY_LOADING=true

# Enable Service Worker
VITE_ENABLE_SERVICE_WORKER=false

# Cache Duration (in milliseconds)
VITE_CACHE_DURATION=300000

# Enable React Query DevTools
VITE_REACT_QUERY_DEVTOOLS=true

# --------------------------------
# SEO & Meta
# --------------------------------

# Default Meta Tags
VITE_META_TITLE=E-Commerce Platform - Shop the Best Products
VITE_META_DESCRIPTION=Discover amazing products at great prices. Fast shipping, secure payments, and excellent customer service.
VITE_META_KEYWORDS=ecommerce,shopping,online store,products,fashion,electronics

# Social Media Meta
VITE_OG_IMAGE=https://yourdomain.com/og-image.jpg
VITE_TWITTER_HANDLE=@yourbrand

# --------------------------------
# Error Tracking & Analytics
# --------------------------------

# Sentry DSN for Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn_url

# Sentry Environment
VITE_SENTRY_ENVIRONMENT=development

# Enable Error Boundary
VITE_ERROR_BOUNDARY=true

# Google Analytics
VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Hotjar Tracking
VITE_HOTJAR_ID=your_hotjar_id

# --------------------------------
# Development Tools
# --------------------------------

# Enable Redux DevTools
VITE_REDUX_DEVTOOLS=true

# Show Debug Info
VITE_DEBUG_MODE=true

# Enable Mock Data
VITE_USE_MOCK_DATA=false

# API Mocking
VITE_MOCK_API=false

# --------------------------------
# Notifications & Alerts
# --------------------------------

# Toast Notification Duration (in milliseconds)
VITE_TOAST_DURATION=5000

# Maximum Toast Notifications
VITE_MAX_TOASTS=3

# Enable Browser Notifications
VITE_BROWSER_NOTIFICATIONS=true

# --------------------------------
# Localization
# --------------------------------

# Default Language
VITE_DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# Date Format
VITE_DATE_FORMAT=MM/DD/YYYY

# Currency Format
VITE_CURRENCY_FORMAT=USD
VITE_CURRENCY_SYMBOL=$

# --------------------------------
# Security Settings
# --------------------------------

# Content Security Policy
VITE_CSP_ENABLED=true

# Enable HTTPS Redirect
VITE_FORCE_HTTPS=false

# Session Security
VITE_SECURE_COOKIES=false

# --------------------------------
# Business Configuration
# --------------------------------

# Company Information
VITE_COMPANY_NAME=E-Commerce Inc.
VITE_COMPANY_EMAIL=support@ecommerce.com
VITE_COMPANY_PHONE=+1-555-123-4567
VITE_COMPANY_ADDRESS=123 Business St, City, State 12345

# Support Configuration
VITE_SUPPORT_EMAIL=support@ecommerce.com
VITE_SUPPORT_PHONE=+1-555-123-4567
VITE_SUPPORT_CHAT_ENABLED=true

# Shipping Information
VITE_FREE_SHIPPING_THRESHOLD=50.00
VITE_DEFAULT_SHIPPING_COST=10.00
VITE_TAX_RATE=0.08

# Return Policy
VITE_RETURN_PERIOD_DAYS=30
VITE_RETURN_POLICY_URL=/return-policy

# --------------------------------
# Third-Party Integrations
# --------------------------------

# Live Chat Widget
VITE_INTERCOM_APP_ID=your_intercom_app_id
VITE_ZENDESK_WIDGET_KEY=your_zendesk_widget_key

# Email Marketing
VITE_MAILCHIMP_API_KEY=your_mailchimp_api_key

# SMS Notifications
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid

# --------------------------------
# Build Configuration
# --------------------------------

# Build Output Directory
VITE_BUILD_OUTPUT_DIR=dist

# Enable Source Maps in Production
VITE_PROD_SOURCE_MAPS=false

# Bundle Analyzer
VITE_BUNDLE_ANALYZER=false